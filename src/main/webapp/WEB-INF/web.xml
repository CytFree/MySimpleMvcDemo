<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>simplemvc</display-name>

    <context-param>
        <param-name>scanPackage</param-name>
        <param-value>com.cyt.simplemvc</param-value>
    </context-param>

    <servlet>
        <servlet-name>simpleDispatchServlet</servlet-name>
        <servlet-class>com.cyt.simplemvc.servlet.SimpleDispatchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>simpleDispatchServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
</web-app>
